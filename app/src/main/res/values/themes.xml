<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Use the stable Material Components DayNight theme to ensure resource linking succeeds
         in minimal environments (including Termux builds) where Material3 XML styles might not
         be available from the downloaded dependency set. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <!-- Compatibility alias: some cached manifests may still reference the previous
         Material3 template theme name. Point it to our Material Components parent so
         resource linking keeps working in Termux and other constrained setups. -->
    <style name="Theme.Material3.DayNight.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
</resources>
